
mixin modal() 
	//  start modals

	+b.modal-win(id="modal-call" class=" " style="display: none" )
		+form-wrap
			.text-center
				+e.title.form-data.h3.ttu Обратный звонок
				p.after-headline Заполните заявку и&nbsp;мы&nbsp;с&nbsp;Вами свяжемся в&nbsp;течение 15&nbsp;минут
			+input("Ваше Имя")(required)  
			+e.BUTTON.btn.btn(type="submit"  ) 
			+polite()
	// #modal-call

	+b.modal-win(id="filter" class=" " style="display: none" )
		+form-wrap
			+filter

	+b.modal-win(id="modal-congratulations" class=" " style="display: none" )
		+e.body
			+e.title Поздравляем!
			+e.subtitle Вы зарегистрировались на сайте epplstore
			+e.btn(href="#") Перейти в каталог
		+pic('congratulations.png','','lazy','')(class="picture-congratulations")

	+b.modal-win(id="modal-reg" class=" " style="display: none" )
		+e.row.row
			+e.col.col-md-6.d-none.d-md-block
				+form-wrap
					+e.title.form-data У меня уже есть аккаунт
						+e.link.d-md-none(href="#") Забыли пароль?
					.row.align-items-center
						.col-9.col-sm-6
							+input("Ваш e-mail","email")(required)  
						.col-9.col-sm-6
							+input("Пароль","password")(required)  
						+e.col.col-sm-6
							+e.BUTTON.btn.btn.btn-success(type="submit") Войти
						+e.col.col-sm-6
							+e.link.d-none.d-md-block(href="#") Забыли пароль?
			.col-md-6
				+form-wrap
					+e.title.form-data Регистрация
						+e.link.link-modal.d-md-none(href="#modal-entrance") У меня уже есть аккаунт
					.row.align-items-center
						.col-9.col-sm-6
							+input('Имя')
						.col-9.col-sm-6
							+input('Телефон','tel')
						.col-9.col-sm-6
							+input("Ваш e-mail","email")(required)
						.col-9.col-sm-6
							+input("Пароль","password")(required)
						.col-sm-12
							+polite()(class="d-md-none")
						+e.col.col-sm-6
							+e.BUTTON.btn.btn.btn-success(type="submit") Зарегистрироваться
						+e.col.col-sm-6
							+e.link.d-none.d-md-block(href="#") Юридическим лицам
		+polite()(class="d-none d-md-block")

	+b.modal-win(id="modal-entrance" class=" " style="display: none" )
		+form-wrap
			+e.title.form-data Вход
				+e.link.link-modal.d-md-none(href="#modal-reg") Регистрация
			.row.align-items-center
				.col-9.col-sm-6
					+input("Ваш e-mail","email")(required)  
				.col-9.col-sm-6
					+input("Пароль","password")(required)  
				+e.col.col-sm-6
					+e.BUTTON.btn.btn.btn-success(type="submit") Войти
				+e.col.col-sm-6
					+e.link(href="#") Забыли пароль?

	+b.modal-win(id="modal-basket" class=" " style="display: none" )
		+e.title.text-center Добавлено в корзину
		+e.youOrder
			.row
				.col-6
					+popularCategoryItem('3','MacBook Pro','от 66 990 р ')
				.col-6
					+popularCategoryItem('4','Apple Watch 4','от 31 990 р ')
		+e.links
			+e.BUTTON.proceed(type="button" data-fancybox-close="" title="Закрыть") Продолжить покупки
			+e.toBasket(href="#") Перейти в корзину
		+sBuyWith(class="d-none d-lg-block")

	+b.modal-win(id="modal-trade-in" class="modal-trade-in " style="display: none" )
		+form-wrap
			+e.title Сдайте нам своё старое устройство и&nbsp;обменяйте его на&nbsp;новое с&nbsp;доплатой
			+e.subtitle Программа Trade-in&nbsp;&mdash; это удобный и&nbsp;экологический способ покупки новых устройств. Теперь Вам есть куда можно принести свои устройства Apple, которые&nbsp;Вы решили обновить, при этом получить для себя выгоду и&nbsp;пользу окружающей среде.
			+e.lightBlock
				.row.align-items-center 
					.col-sm-auto 
						+e.trade Хочу сдать:
					.col
						+modalDropdown
				+b.prod-chars
					+charsItem('Накопитель:')
						+e.memory-list
							+memoryRadioItem('64 ГБ')
							+memoryRadioItem('128 ГБ')(checked)
							+memoryRadioItem('256 ГБ')
			+e.lightBlock
				.row.align-items-center 
					.col-sm-auto 
						+e.trade И получить:
					.col

						+modalDropdown
				+b.prod-chars
					+charsItem('Накопитель:')
						+e.memory-list
							+memoryRadioItem('64 ГБ')
							+memoryRadioItem('128 ГБ')(checked)
							+memoryRadioItem('256 ГБ')
					+charsItem('Цвет:')
						+e.color-list
							+colorRadioItem('#fb4f4f')
							+colorRadioItem('#757e74')(checked)
							+colorRadioItem('#000000')
							+colorRadioItem('#ffffff', 'white-circle')
							+colorRadioItem('#e6cf72')
			+e.buttonsWrap.row 
				.col-sm-7
					+input('Телефон', 'tel')
				.col-sm
					+e.btn.btn.btn-primary(type='submit') Забронировать
	// end modals

mixin modalDropdown(title)
	+b.modalDropdown
		+e.head.accardion-js Apple Iphone 6s
		+e.hidden.accardion-toggle-js
			+b.tabs
				+e.caption
					+e.btn.active Iphone
					+e.btn Ipad
					+e.btn Imac
					+e.btn Watch
				+e.wrap
					mixin content
						+e.content&attributes(attributes)
							+e.item(type="button") Watch 1 первое поколение
							+e.item(type="button") Watch Series 1
							+e.item(type="button") Watch Series 1
							+e.item(type="button") Watch Series 1
							+e.item(type="button") Watch Series 1
							+e.item(type="button") Watch Series 1
							+e.item(type="button") Watch Series 1
							+e.item(type="button") Watch Series 1
					+content().active
					+content()
					+content()
					+content()