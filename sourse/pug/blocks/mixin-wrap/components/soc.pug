mixin item-sos(icon, a='#')
	+e.A.item(href= a target="_blank")
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('fb')
			+item-sos('vk')
			+item-sos('instagram')
			+item-sos('youtube')


mixin messengers()
	+b.messengers
		+e.item(href="#")
			+icon('whatsapp')
		+e.item(href="#")
			+icon('viber')
		+e.item(href="#")
			+icon('telegram')
