mixin popularCategoryItem(img,title,price)
	+b.popularCategoryItem(href="#")
		+pic(`popularCategory-${img}.png`,'','lazy','')
		+e.title= title
		+e.price= price


mixin sPopularPosition()
	// start sPopularPosition
	+b.SECTION.sPopularPosition.section#sPopularPosition&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Популярні товари
				
			.row
				.col-6.col-lg-3
					+popularCategoryItem('1','iphone SE','от 39 990 р ')
				.col-6.col-lg-3
					+popularCategoryItem('2','Apple AirPods Pro','от 39 990 р ')
				.col-6.col-lg-3
					+popularCategoryItem('3','MacBook Pro','от 66 990 р ')
				.col-6.col-lg-3
					+popularCategoryItem('4','Apple Watch 4','от 31 990 р ')
				.col-6.col-lg-3.d-none.d-lg-block
					+popularCategoryItem('4','Apple Watch 4','от 31 990 р ')
				.col-6.col-lg-3.d-none.d-lg-block
					+popularCategoryItem('3','MacBook Pro','от 66 990 р ')
				.col-6.col-lg-3.d-none.d-lg-block
					+popularCategoryItem('2','Apple AirPods Pro','от 39 990 р ')
				.col-6.col-lg-3.d-none.d-lg-block
					+popularCategoryItem('5','iPad PRO','от 69 990 р ')
			+e.allCategory(href="#") 
				span
				|Смотреть все товары
				
	// end sPopularPosition